<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:layout_margin="25dp"
    android:background="@android:color/transparent"
    app:cardCornerRadius="15dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rating_book_tile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Default title"
            android:textSize="25sp"
            android:background="@color/almost_white"/>

        <LinearLayout
            android:id="@+id/rating_book_star_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/rating_book_star_1"
                android:tag="unselected"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="10dp"
                android:src="@drawable/star_unselected" />

            <ImageView
                android:id="@+id/rating_book_star_2"
                android:tag="unselected"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="10dp"
                android:src="@drawable/star_unselected" />

            <ImageView
                android:id="@+id/rating_book_star_3"
                android:tag="unselected"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="10dp"
                android:src="@drawable/star_unselected" />

            <ImageView
                android:id="@+id/rating_book_star_4"
                android:tag="unselected"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="10dp"
                android:src="@drawable/star_unselected" />

            <ImageView
                android:id="@+id/rating_book_star_5"
                android:tag="unselected"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="10dp"
                android:src="@drawable/star_unselected" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/rating_book_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Cancel"
                android:textSize="18sp"
                android:layout_marginEnd="15dp"
                android:backgroundTint="@color/quantum_googred"/>

            <Button
                android:id="@+id/rating_book_rate_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green_accept"
                android:layout_gravity="end"
                android:text="Rate"
                android:layout_marginStart="40dp"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>