<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/menu_books_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Books"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:id="@+id/div_search_book"
        android:layout_below="@id/menu_books_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp">

        <EditText
            android:id="@+id/book_search_filter"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:hint="Insert title" />

        <Button
            android:id="@+id/book_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Search" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/div_books_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/div_search_book"
        android:orientation="vertical" >
    </LinearLayout>



</RelativeLayout>